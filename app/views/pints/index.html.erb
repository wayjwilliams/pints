<%= render 'pages/home' unless user_signed_in? %>

<div id="pints" class="transitions-enabled">
  <% @pints.each do |pint| %>
  <div class="box panel panel-default" style="pull-right">
    <%= link_to image_tag(pint.photo.url(:thumb)), pint %>
    <div class="panel-body">
      <%= pint.note %><br/>
      <strong><%= pint.user.email if pint.user %></strong>
      <% if pint.user == current_user %>
      <div class="actions">
        <%= link_to edit_pint_path(pint) do %>
        <span class="glyphicon glyphicon-edit"></span> Edit
        <% end %>
        <%= link_to pint, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-trash"></span> Delete
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
