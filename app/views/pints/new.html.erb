<h1>Upload a New Pint</h1>

<div class="container">
  <%= simple_form_for @pint, html: { class: 'form-horizontal' } do |f| %>
    <%= f.error_notification %>
    <%= f.input :address %>
    <%= f.input :photo %>
    <%= f.input :note %>
    <%= f.submit class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
